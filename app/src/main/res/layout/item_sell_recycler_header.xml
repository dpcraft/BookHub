<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/sell_recycler_card_view"
    android:clickable="true"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp"
    >
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="5">
       <Button
           android:id="@+id/bt_1"
           style="@style/book_class_button"
           android:drawableTop="@drawable/ic_qstn"
           android:background="@color/transparent"
           android:text="全部分类"/>
        <Button
            android:id="@+id/bt_2"
            style="@style/book_class_button"
            android:drawableTop="@drawable/ic_qstn"
            android:background="@color/transparent"
            android:text="文学艺术"/>
        <Button
            android:id="@+id/bt_3"
            style="@style/book_class_button"
            android:drawableTop="@drawable/ic_qstn"
            android:background="@color/transparent"
            android:text="人文社科"/>
        <Button
            android:id="@+id/bt_4"
            style="@style/book_class_button"
            android:drawableTop="@drawable/ic_qstn"
            android:background="@color/transparent"
            android:text="外语学习"/>
        <Button
            android:id="@+id/bt_5"
            style="@style/book_class_button"
            android:drawableTop="@drawable/ic_qstn"
            android:background="@color/transparent"
            android:text="考研"/>
        <Button
            android:id="@+id/bt_6"
            style="@style/book_class_button"
            android:drawableTop="@drawable/ic_qstn"
            android:background="@color/transparent"
            android:text="教材"/>
        <Button
            android:id="@+id/bt_7"
            style="@style/book_class_button"
            android:drawableTop="@drawable/ic_qstn"
            android:background="@color/transparent"
            android:text="计算机编程"/>
        <Button
            android:id="@+id/bt_8"
            style="@style/book_class_button"
            android:drawableTop="@drawable/ic_qstn"
            android:background="@color/transparent"
            android:text="经济管理"/>
        <Button
            android:id="@+id/bt_9"
            style="@style/book_class_button"
            android:drawableTop="@drawable/ic_qstn"
            android:background="@color/transparent"
            android:text="考研"/>
        <Button
            android:id="@+id/bt_10"
            style="@style/book_class_button"
            android:drawableTop="@drawable/ic_qstn"
            android:background="@color/transparent"
            android:text="课本"/>

    </GridLayout>
</android.support.v7.widget.CardView>